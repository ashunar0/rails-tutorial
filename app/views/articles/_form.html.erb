<%= form_with(model: article, class: "form-card") do |form| %>
  <% if article.errors.any? %>
    <div class="form-errors">
      <strong><%= article.errors.count %>件のエラーがあります：</strong>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, placeholder: "記事のタイトルを入力" %>
  </div>

  <div class="form-group">
    <%= form.label :body, "本文" %>
    <%= form.text_area :body, placeholder: "記事の本文を入力" %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <% if article.persisted? %>
      <%= link_to "キャンセル", article, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to "キャンセル", articles_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
